{
	"extends": "@tsconfig/svelte/tsconfig.json",
	"compilerOptions": {
		"lib": [
			"DOM",
			"ES2017",
			"WebWorker"
		],
		"strict": true,

		// "module": "UMD", /* Specify moduleC code generation: 'none', 'commonjs', 'amd', 'system', 'umd', 'es2015', or 'ESNext'. */
		"target": "ES2017"
	},
	"include": [
		"src/**/*",
	],
	"exclude": [
		"node_modules/*",
		"__sapper__/*",
		"static/*"
	]
}